{
  "manifest_version": 3,
  "name": "AI Helper",
  "version": "1.0",
  "description": "Right-click selected text to get AI-generated response",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "icons": { "128": "icon.png" },
  "commands": {
    "toggle-chat": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Toggle AI Chat visibility"
    },
    "generate-response": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Generate AI response for selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/marked.min.js", "libs/dompurify.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
